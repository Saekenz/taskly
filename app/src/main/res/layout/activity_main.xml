<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <Button
        android:id="@+id/buttonStartTaskCreation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a Task"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/buttonStartViewTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View your Tasks"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/buttonStartCalendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Calendar"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/buttonImportTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Import Tasks" />

    <Button
        android:id="@+id/buttonExportTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Export Tasks" />

    <Button
        android:id="@+id/buttonTestTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Tasks + Attachments" />

    <Switch
        android:id="@+id/switchNightMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Night Mode" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="32sp"
            android:text="Taskly" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

</LinearLayout>